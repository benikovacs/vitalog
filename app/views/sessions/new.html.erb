<div class="card mb-3">
  <div class="dash-hero card-body text-center">
   <h2><span style="color:#C11111; font-size:1em"> Log in </h2>
  </div>
</div>

<div class="container">

        
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
       
       <div class="col">
        

         <div class="form-group row">
          <%= f.label :email, class: "col-3 col-form-label text-dark" %>
          <div class="col-9"> 
            <%= f.email_field :email, rows: 1, class: "form-control rounded", placeholder: "email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-3 col-form-label text-dark" %>
          <div class="col-9"> 
            <%= f.password_field :password, rows: 1, class: "form-control rounded", placeholder: "enter your password" %>
          </div>
        </div>
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit "Log in", class: "btn btn-outline-success btn-block btn-lg ml-4 mr-4 mb-2" %>
          <%= link_to "Cancel", root_path, class: "btn btn-outline-danger btn-block btn-lg ml-4 mr-4", data: {confirm: "Are you sure?"} %>
        </div>
        
      <% end %>
    
   
</div>