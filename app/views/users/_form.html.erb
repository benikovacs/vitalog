<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
    
     <%= render 'layouts/errors', obj: @user %> 
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-light rounded", local: true) do |f| %>
       
       <div class="col">
        

        <div class="form-group row">
          <%= f.label :username, class: "col-4 col-form-label text-dark" %>
          <div class="col-8"> 
            <%= f.text_area :username, rows: 1, class: "form-control rounded", placeholder: "Username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-4 col-form-label text-dark" %>
          <div class="col-8"> 
            <%= f.email_field :email, rows: 1, class: "form-control rounded", placeholder: "email address" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-4 col-form-label text-dark" %>
          <div class="col-8"> 
            <%= f.password_field :password, rows: 1, class: "form-control rounded", placeholder: "choose password" %>
          </div>
        </div>
        
        </div>


        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-success btn-block btn-lg ml-4 mr-4 mb-2") %>
          <%= link_to "Cancel", root_path, class: "btn btn-outline-danger btn-block btn-lg ml-4 mr-4", data: {confirm: "Are you sure?"} %>
        </div>
        
      <% end %>
    
    </div>
   
  </div>
</div>